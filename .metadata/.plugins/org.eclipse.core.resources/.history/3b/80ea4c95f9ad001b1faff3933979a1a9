object Demo {
  println("Welcome to the Scala workshee")        //> Welcome to the Scala workshee
                                                  //> num  : Int = 8
  //scala supports concurrency and distribution so variables should be declared as val(constants)
val num: Int = 20

val num1: Int = 10                                //> num1  : Int = 10

var sum = num + num1

println(num1)                                     //> 10


case class Student(name:String, var rollno: Int = 123)

var s = new Student("varun")
s.rollno




